<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mdui.fragments.MyProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.sap.cloud.mobile.fiori.contact.ProfileHeader
            android:id="@+id/ph_profile_ovp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headline="My name"
            app:subheadline="ID"
            app:description="Gender, Race"
            app:detailImage="@drawable/ic_account_circle_black_24dp"
            android:foregroundTint="@color/white"
            >
        </com.sap.cloud.mobile.fiori.contact.ProfileHeader>

        <com.sap.cloud.mobile.fiori.formcell.SimplePropertyFormCell
            android:id="@+id/spf_asthmatic_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isEditable="false"
            app:key="Asthmatic level"
            app:value="0" />

        <com.sap.cloud.mobile.fiori.formcell.SimplePropertyFormCell
            android:id="@+id/spf_dob_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="Date of Birth"
            app:value="..."
            app:isEditable="false"/>

        <com.sap.cloud.mobile.fiori.formcell.SimplePropertyFormCell
            android:id="@+id/spf_user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="Contact Number"
            app:value="..."
            app:isEditable="false"/>

        <com.sap.cloud.mobile.fiori.formcell.SimplePropertyFormCell
            android:id="@+id/spf_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key="Address"
            app:value="..."
            app:isEditable="false"/>
    </LinearLayout>
</FrameLayout>